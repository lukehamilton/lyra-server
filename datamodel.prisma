enum Role {
  ADMIN
  USER
}

enum PostType {
  PRODUCT
  LINK
}

type User {
  id: ID! @unique
  email: String @unique
  role: Role @default(value: USER)
  name: String!
  avatar: String
  auth0id: String! @unique
  identity: String
  privateKey: String
  followedTopics: [Topic!]! @relation(name: "FollowedTopics")
}

type Topic {
  id: ID! @unique
  name: String!
  slug: String! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  description: String
  image: String
  followersCount: Int
  postsCount: Int
  trending: Boolean
  posts: [Post!]! @relation(name: "PostTopics")
  followedBy: [User!]! @relation(name: "FollowedTopics")
}

type Post {
  id: ID! @unique
  type: PostType @default(value: PRODUCT)
  name: String!
  slug: String! @unique
  thumbnail: String!
  description: String!
  votesCount: Int!
  commentsCount: Int!
  day: String
  featured: Boolean
  topics: [Topic!]! @relation(name: "PostTopics")
  votes: [Vote!]!
}

type Vote {
  id: ID! @unique
  user: User!
  post: Post!
}

type Section {
  id: ID! @unique
  date: String! @unique
  posts: [Post!]!
}

