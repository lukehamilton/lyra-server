enum Role {
  ADMIN
  USER
}

type User {
  id: ID! @unique
  email: String @unique
  role: Role @default(value: USER)
  name: String!
  avatar: String
  auth0id: String! @unique
  identity: String
  privateKey: String
  posts: [Post!]!
  followedTopics: [Topic!]! @relation(name: "FollowedTopics")
}

type Post {
  id: ID! @unique
  title: String!
  published: Boolean! @default(value: "false")
  author: User
}

type Product {
  id: ID! @unique
  name: String!
  slug: String! @unique
  imageUrl: String!
  description: String!
  votesCount: Int!
  commentsCount: Int!
  topics: [Topic!]! @relation(name: "ProductTopics")
  votes: [ProductVote!]!
}

type Topic {
  id: ID! @unique
  name: String!
  slug: String! @unique
  products: [Product!]! @relation(name: "ProductTopics")
  followedBy: [User!]! @relation(name: "FollowedTopics")
}

type ProductVote {
  id: ID! @unique
  product: Product!
  user: User!
}

